/*******************************
         Site Overrides
*******************************/

a {
    color: @primaryColor;
    &:hover {
        color: @primaryColor;
    }
}

.todo.heading-with-buttons {
    margin-bottom: 0 !important;
}

.todo.board-item {
    min-height: 110px;
}

.todo.meta {
    opacity: .7;
    font-size: .8rem;
    margin-bottom: .5rem;
}

.todo.text-default {
    color: @textColor;
}
.todo.text-primary {
    color: @primaryColor !important;
}

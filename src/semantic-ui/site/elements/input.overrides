/*******************************
         Site Overrides
*******************************/

.ui.form input,
.ui.form textarea,
.ui.form select,
.ui.form input[type="text"],
.ui.form input[type="password"] {
    background: var(--pageBackground) !important;
    color: var(--textColor) !important;
    &:focus {
        border-color: var(--primaryColor) !important;
    }
    &::placeholder {
      color: var(--textColor);
      opacity: .8;
    }
}